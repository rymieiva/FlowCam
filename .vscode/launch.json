    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--dataset","hydrant","--vid_len","8","--batch_size","2","--name","hydrant_flowcam","--n_skip","0"
            ]
        }
    ]
}